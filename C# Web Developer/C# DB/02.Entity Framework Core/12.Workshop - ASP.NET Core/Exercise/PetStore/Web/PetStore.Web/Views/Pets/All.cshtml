@*@using PetStore.Services.Models.Pet;  or use it in global ViewImports*@

@*@model IEnumerable<PetListingServiceModel>*@

@model AllPetsViewModel

<h1>All Pets</h1>

<table class="table table-bordered table-striped">
    <tr>
        <th>Type</th>
        <th>Breed</th>
        <th>Price</th>
        <th></th>
    </tr>
    @foreach (var pet in Model.Pets)
    {
        <tr>
            <td>(@pet.Id) @pet.Category</td>
            <td>@pet.Breed</td>
            <td>$@pet.Price</td>
            <td class="text-center"><a href="/Pets/Delete/@pet.Id" class="btn btn-danger btn-sm">Delete</a></td>
        </tr>
    }
</table>

<div>
    <a href="/Pets/All?page=@Model.PreviousPage" class="float-left btn btn-info @(Model.PreviousDisabled ? "disabled" : String.Empty)">Prev</a>
    <a href="/Pets/All?page=@Model.NextPage" class="float-right btn btn-info @(Model.NextDisabled ? "disabled" : String.Empty)">Next</a>
</div>

