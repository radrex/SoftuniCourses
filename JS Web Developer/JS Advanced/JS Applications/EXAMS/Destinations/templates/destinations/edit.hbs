{{> nav}}

<section id="viewEditdestination">
  <h2>Edit existing destination</h2>
  <form id="formAdddestination" action="/edit/{{id}}" method="POST">
    <label for="destination">Destination name:</label>
    <input type="text" id="destination" name="destination" value="{{destinationData.destination}}">
    <label for="city">City:</label>
    <input type="text" id="city" name="city" value="{{destinationData.city}}">
    <label for="duration">Duration:</label>
    <input type="number" id="duration" name="duration" value="{{destinationData.duration}}">
    <label for="departureDate">Departure Date:</label>
    <input type="date" id="departureDate" name="departureDate" value="{{destinationData.departureDate}}">
    <label for="imgUrl">Image:</label>
    <input type="text" id="imgUrl" name="imgUrl"
      value="{{destinationData.imgUrl}}">

    <input type="submit" class="create" value="Edit">
  </form>
</section>

{{> footer}}