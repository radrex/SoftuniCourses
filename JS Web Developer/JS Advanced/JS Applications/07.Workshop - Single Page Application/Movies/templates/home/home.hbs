{{> nav}}

<div class="jumbotron jumbotron-fluid text-light" style="background-color: #343a40;">
  <img src="https://s.studiobinder.com/wp-content/uploads/2019/06/Best-M-Night-Shyamalan-Movies-and-Directing-Style-StudioBinder.jpg" class="img-fluid" alt="Responsive image">
  <h1 class="display-4">Movies</h1>
  <p class="lead">Unlimited movies, TV shows, and more. Watch anywhere. Cancel anytime.</p>
</div>

{{#if isLoggedIn}}
  <h1 class="text-center">Movies</h1>
  <section>
    <a id="add-movie-btn" href="/movies/add" class="btn btn-warning">Add Movie</a>
    <form class="search float-right">
      <label>Search: </label>
      <input type="text">
      <input type="submit" class="btn btn-info" value="Search">
    </form>
  </section>
  
  <div id="movies-container" class="mt-3">
    <div class="row d-flex d-wrap">
      <div class="card-deck d-flex justify-content-center">
        {{#each movies as |movie movieId|}}
          {{> movie movieId=movieId}}
          {{else}}
          <p>No movies...</p>
        {{/each}}
      </div>
    </div>
  </div>
{{/if}}

{{> footer}}